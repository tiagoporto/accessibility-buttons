{
  "name": "accessibility-buttons",
  "version": "0.0.0-development",
  "description": "Web component for adding/removing contrast and increasing/decreasing font size, enhancing the user experience for everyone.",
  "homepage": "https://tiagoporto.github.io/accessibility-buttons",
  "keywords": [
    "accessibility",
    "button",
    "contrast",
    "font size",
    "increase font",
    "decrease font",
    "web component"
  ],
  "author": "Tiago Porto (https://tiagoporto.com)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tiagoporto/accessibility-buttons.git",
    "directory": "packages/accessibility-buttons"
  },
  "funding": "https://github.com/sponsors/tiagoporto",
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./ContrastButton": "./src/A11yContrastButton/a11y-contrast-button.ts",
    "./FontSizeButton": "./src/A11yFontSizeButton/a11y-font-size-button.ts"
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "module": "./dist/index.js",
    "exports": {
      ".": "./dist/index.js",
      "./ContrastButton": "./dist/a11y-contrast-button.js",
      "./FontSizeButton": "./dist/a11y-font-size-button.js"
    }
  },
  "customElements": "custom-elements.json",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "custom-elements.json",
    "/dist",
    "/docs"
  ],
  "license": "MIT",
  "scripts": {
    "prepack": "pnpm build",
    "analyze": "custom-elements-manifest analyze --litelement",
    "build": "rm -rf dist && rollup --config",
    "postbuild": "pnpm analyze",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "dependencies": {
    "lit": "^3.1.4",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@chromatic-com/playwright": "^0.12.7",
    "@custom-elements-manifest/analyzer": "^0.10.5",
    "@jest/globals": "^30.1.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "rollup": "^4.46.3",
    "rollup-plugin-postcss": "^4.0.2",
    "shadow-dom-testing-library": "^1.13.1"
  }
}
