{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "bundler",
    "strict": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmit": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"]
}
