{
  "compilerOptions": {
    "target": "es2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["DOM", "ES2020"],
    "strict": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "isolatedModules": true,
    "declaration": true,
    "noEmitOnError": true
  },
  "exclude": ["**/*.test.ts", "tests"]
}
