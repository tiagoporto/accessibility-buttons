{
  "name": "accessibility-buttons-root",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22",
    "npm": "uses pnpm",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "$CI = true || (dependabot-config && editor-config)",
    "prepare": "husky",
    "build": "rspack build",
    "dev": "rspack dev",
    "test-app": "rspack dev --config ./tests/app/rspack.config.ts",
    "preview": "rspack preview",
    "checks": "pnpm check-docs && pnpm format:check && pnpm typecheck && pnpm lint:styles && pnpm lint",
    "check-docs": "remark --frail . --ext md,markdown,mdx",
    "format:check": "prettier --check --ignore-unknown \"**/*\"",
    "format": "pnpm format:check --write",
    "typecheck": "tsc --project tsconfig.json",
    "lint:styles": "stylelint \"**/*.{css,scss}\"",
    "lint:styles:fix": "stylelint \"**/*.{css,scss}\" --fix",
    "lint": "eslint --max-warnings 0",
    "lint:fix": "pnpm lint --fix",
    "coverage": "pnpm test --coverage",
    "test": "jest --config ./jest/jest.config.ts",
    "test:watch": "pnpm test --watch",
    "test:package": "jest --config jest.config.package.mjs",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test --ui"
  },
  "dependencies": {
    "accessibility-buttons": "workspace:*",
    "highlight.js": "^11.11.1",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@anolilab/semantic-release-pnpm": "^2.0.3",
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@chromatic-com/playwright": "^0.12.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@jest/globals": "^30.1.1",
    "@playwright/test": "^1.55.0",
    "@rspack/cli": "^1.3.15",
    "@rspack/core": "^1.3.15",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@tiagoporto/dependabot-config": "^2.2.0",
    "@tiagoporto/editor-config": "^2.0.0",
    "@tiagoporto/eslint-config": "^5.2.0",
    "@tiagoporto/prettier-config": "^2.1.0",
    "@tiagoporto/remark-config": "^1.10.0",
    "@tiagoporto/stylelint-config": "^1.2.0",
    "@types/node": "^24.3.0",
    "babel-jest": "^30.0.5",
    "chromatic": "^13.1.3",
    "eslint": "^9.36.0",
    "eslint-plugin-jest": "^29.0.1",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^15.3.0",
    "prettier": "^3.4.2",
    "remark": "^15.0.1",
    "remark-cli": "^12.0.1",
    "semantic-release": "^24.2.7",
    "semantic-release-monorepo": "github:tiagoporto/semantic-release-monorepo",
    "shadow-dom-testing-library": "^1.13.1",
    "start-server-and-test": "^2.0.13",
    "stylelint": "^16.13.2",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "overrides": {
      "conventional-changelog-conventionalcommits": ">=9.0.0"
    }
  }
}
